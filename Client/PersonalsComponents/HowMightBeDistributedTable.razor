@if(InputValue == null || InputValue is null)
{
    
}
else
{
    <table class="table table-bordered table-responsive">
        <thead class="table-primary">
            <tr>
                <th scope="col">Percentagem</th>
                <th scope="col">Valor</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>50%</td>
                <td>@(Convert.ToDouble(InputValue) * 0.5)</td>
            </tr>
            <tr>
                <td>30%</td>
                <td>@(Convert.ToDouble(InputValue) * 0.3)</td>
            </tr>
            <tr>
                <td>20%</td>
                <td>@(Convert.ToDouble(InputValue) * 0.2)</td>
            </tr>
        </tbody>
    </table>

}

@code {
    [Parameter]
    public string InputValue { get; set; }
}